# ====================================
# GSC (Genius Software Core) Environment Variables
# ====================================
# Copy this file to .env and update the values

# ====================================
# APPLICATION SETTINGS
# ====================================
NODE_ENV=development
PORT=5000
APP_URL=https://gsc.your-domain.com
SERVER_PORT=5000
LOG_LEVEL=info
APP_NAME="Genius Software Core"
APP_VERSION=1.0.0

# ====================================
# DATABASE CONFIGURATION
# ====================================
# PostgreSQL Connection (optional - falls back to in-memory)
DATABASE_URL=postgresql://user:password@localhost:5432/gsc
POSTGRES_DB=gsc_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# ====================================
# AUTHENTICATION & SECURITY
# ====================================
# JWT Configuration
JWT_SECRET=change_me_very_strong_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your_very_long_and_secure_session_secret_key_here
SESSION_MAX_AGE=86400000

# Password Security
BCRYPT_ROUNDS=12
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=4
ARGON2_HASH_LENGTH=32

# Admin User Provisioning
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=Change!This!Strong!Password123
ADMIN_NAME=System Administrator
ADMIN_FORCE_CHANGE=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# CORS Settings
CORS_ORIGIN=https://gsc.your-domain.com
CORS_CREDENTIALS=true

# ====================================
# EMAIL CONFIGURATION
# ====================================
# Email (transactional)
RESEND_API_KEY=your_resend_key
MAIL_FROM=noreply@gsc.your-domain.com

# SMTP Settings (alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ====================================
# PAYMENT PROCESSING
# ====================================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_or_live_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_PRICE_PRO_MONTH=price_xxx
STRIPE_PRICE_PRO_YEAR=price_xxx
STRIPE_PRICE_BUSINESS_MONTH=price_xxx
STRIPE_PRICE_BUSINESS_YEAR=price_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ====================================
# EXTERNAL SERVICES
# ====================================
# File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=gsc-uploads

# Google Services
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# Microsoft Services
MICROSOFT_CLIENT_ID=your_microsoft_oauth_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_oauth_client_secret

# ====================================
# MONITORING & ANALYTICS
# ====================================
# Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# ====================================
# REDIS CONFIGURATION (Optional)
# ====================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379
REDIS_HOST=localhost

# ====================================
# FRONTEND CONFIGURATION
# ====================================
# Vite Environment Variables (prefixed with VITE_)
VITE_API_URL=http://localhost:5000/api
VITE_APP_NAME="GSC Development"
VITE_ENVIRONMENT=development
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
VITE_SENTRY_DSN=https://your-frontend-sentry-dsn@sentry.io/project-id

# ====================================
# DEPLOYMENT CONFIGURATION
# ====================================
# Docker Settings
COMPOSE_PROJECT_NAME=gsc
DOCKER_REGISTRY=ghcr.io

# Staging Environment
STAGING_DATABASE_URL=postgresql://postgres:password@staging-db:5432/gsc_staging
STAGING_API_URL=https://staging-api.geniussoftwarecore.com

# Production Environment
PRODUCTION_DATABASE_URL=postgresql://postgres:secure_password@prod-db:5432/gsc_production
PRODUCTION_API_URL=https://api.geniussoftwarecore.com

# Nginx Configuration
NGINX_PORT=80
NGINX_SSL_PORT=443
CLIENT_PORT=3001
API_PORT=3000

# ====================================
# PERFORMANCE & SCALING
# ====================================
# Application Clustering
CLUSTER_WORKERS=2
MAX_MEMORY=1024

# Data Storage Path (for production volumes)
DATA_PATH=./data

# ====================================
# TESTING CONFIGURATION
# ====================================
# Test Database
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/gsc_test

# ====================================
# FEATURE FLAGS
# ====================================
ENABLE_REGISTRATION=true
ENABLE_CRM_MODULE=true
ENABLE_KANBAN_BOARD=true
ENABLE_DARK_MODE=true
ENABLE_RTL_SUPPORT=true